@{
    @using Ecomerce.DTO;
    @model ProductoDTO
    @using (Html.BeginForm("Form", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model => Model.IdProducto)
        <div class=" d-flex justify-content-end mb-4">
            <button class="btn btn-outline-dark" type="submit" onclick="regresar()">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-bar-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M12.5 15a.5.5 0 0 1-.5-.5v-13a.5.5 0 0 1 1 0v13a.5.5 0 0 1-.5.5M10 8a.5.5 0 0 1-.5.5H3.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L3.707 7.5H9.5a.5.5 0 0 1 .5.5" />
                </svg>
                Regresar
            </button>
        </div>
        <div class="d-flex row mb-3">
            <div class="col-4">
                @Html.LabelFor(model => Model.Nombre, new { @class = "form-label" })
                @Html.TextBoxFor(model => Model.Nombre, new { @class = "form-control", @placeholder = "Nombre del producot" })
            </div>
            <div class="col-4">
               @Html.LabelFor(model => Model.Precio, new {@class = "form-label"})
               @Html.TextBoxFor(model => Model.Precio, new {@class = "form-control"})
            </div>
            <div class="col-4">
                @Html.LabelFor(model => Model.Categoria, new { @class = "form-label" })
                @Html.TextBoxFor(model => Model.Categoria, new { @class = "form-control", @placeholder = "categoria o departamento" })
            </div>
            <div class="col-4">
            @Html.LabelFor(model => Model.UrlImagen, new {@class = "form-label"})
            @Html.TextBoxFor(model => Model.UrlImagen, new{@class = "form-control"})
            </div>
        </div>
        <script type="text/javascript">
            function regresar() {
                window.history.back();
            }
        </script>



        //Button
        <div class="mb-4">
            <button class="btn btn-outline-dark" type="submit">
                Guardar
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy" viewBox="0 0 16 16">
                    <path d="M11 2H9v3h2z" />
                    <path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0M1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5m3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4zM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5z" />
                </svg>
                
                @if (TempData["notificacion"] != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            var message = '@TempData["notificacion"]';
                            alert(message);
                        };
                        window.location = "@Url.Action("GetAll", "Usuario")";
                    </script>
                }
            </button>
        </div>
    }
}
